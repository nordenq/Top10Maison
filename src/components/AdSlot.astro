---
const { slot, label = "Advertisement", client = "ca-pub-3680083929895808" } = Astro.props as {
  slot?: string;
  label?: string;
  client?: string;
};
---

<script is:inline>
  const adsenseClient = "{client}";
  if (!window.__adsbygoogleLoaded) {
    window.__adsbygoogleLoaded = true;
    const script = document.createElement('script');
    script.async = true;
    script.src = `https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${adsenseClient}`;
    script.crossOrigin = "anonymous";
    document.head.appendChild(script);
  }
</script>

<div class="section">
  <div class="page-container">
    <div class="card flex min-h-[120px] items-center justify-center border-dashed border-border bg-white/60 p-6 text-xs uppercase tracking-[0.25em] text-ink/50">
      {label} {slot ? `â€¢ ${slot}` : ""}
    </div>
    <ins
      class="adsbygoogle block"
      style="display:block"
      data-ad-client={client}
      data-ad-slot={slot}
      data-ad-format="auto"
      data-full-width-responsive="true"
    ></ins>
  </div>
</div>
