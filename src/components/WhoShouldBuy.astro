---
const { items } = Astro.props as { items: string[] };
---

<section class="section">
  <div class="mx-auto w-full max-w-6xl">
    <h2 class="text-2xl font-semibold">Who should buy this</h2>
    <ul class="mt-4 list-disc space-y-2 pl-6 text-sm text-ink/70">
      {items.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </div>
</section>
