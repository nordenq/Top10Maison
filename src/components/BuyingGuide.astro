---
const {
  title,
  profiles = [],
  sections = [],
  id = "how-to-choose"
} = Astro.props as {
  title: string;
  profiles?: Array<{ title: string; detail: string; note: string }>;
  sections?: Array<{ title: string; bullets: string[] }>;
  id?: string;
};
---

<section id={id}>
  <div class="space-y-6">
    <div>
      <h2 class="text-2xl font-semibold text-ink">{title}</h2>
    </div>

    {profiles.length ? (
      <div class="grid gap-4 md:grid-cols-3">
        {profiles.map((profile) => (
          <div class="card p-5">
            <p class="text-sm font-semibold text-ink">{profile.title}</p>
            <p class="mt-2 text-sm text-ink/70">{profile.detail}</p>
            <p class="mt-2 text-xs text-ink/60">{profile.note}</p>
          </div>
        ))}
      </div>
    ) : null}

    {sections.length ? (
      <div class="space-y-3">
        {sections.map((section) => (
          <details class="card p-4">
            <summary class="cursor-pointer text-sm font-semibold text-ink">{section.title}</summary>
            <ul class="mt-3 list-disc list-inside space-y-2 text-sm text-ink/70">
              {section.bullets.map((bullet) => (
                <li>{bullet}</li>
              ))}
            </ul>
          </details>
        ))}
      </div>
    ) : null}
  </div>
</section>
