---
const {
  title,
  profilesTitle = "Pick the right size",
  sectionsTitle = "Buying considerations",
  profiles = [],
  sections = [],
  id = "how-to-choose"
} = Astro.props as {
  title: string;
  profilesTitle?: string;
  sectionsTitle?: string;
  profiles?: Array<{ title: string; detail: string; note: string }>;
  sections?: Array<{ title: string; bullets: string[] }>;
  id?: string;
};
---

<section id={id}>
  <div class="space-y-6">
    <div>
      <h2 class="text-2xl font-semibold text-ink">{title}</h2>
      <p class="mt-2 text-sm text-ink/70">
        Our evaluation framework focuses on practical factors that affect everyday use.
      </p>
    </div>

    {profiles.length ? (
      <div>
        <h3 class="text-sm font-semibold text-ink">{profilesTitle}</h3>
        <div class="mt-3 grid gap-4 md:grid-cols-3">
          {profiles.map((profile) => (
            <div class="card p-5">
              <p class="text-sm font-semibold text-ink">{profile.title}</p>
              <p class="mt-2 text-sm text-ink/70">{profile.detail}</p>
              <p class="mt-2 text-xs text-ink/60">{profile.note}</p>
            </div>
          ))}
        </div>
      </div>
    ) : null}

    {sections.length ? (
      <div>
        <h3 class="text-sm font-semibold text-ink">{sectionsTitle}</h3>
        <div class="mt-3 grid gap-6 lg:grid-cols-2">
          {sections.map((section, index) => (
            <div
              class={`pt-4 ${index === 0 ? "" : "border-t border-border/60"} ${
                index < 2 ? "lg:pt-0 lg:border-t-0" : "lg:border-t lg:border-border/60 lg:pt-4"
              }`}
            >
              <p class="text-sm font-semibold text-ink">{section.title}</p>
              <ul class="mt-3 list-clean space-y-2 text-sm text-ink/70">
                {section.bullets.map((bullet) => (
                  <li>{bullet}</li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    ) : null}
  </div>
</section>
