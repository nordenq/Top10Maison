---
import type { Product } from "../utils/data";
import ProductCard from "./ProductCard.astro";

const {
  title,
  intro,
  products,
  schema = false,
  startRank = 1,
  id
} = Astro.props as {
  title: string;
  intro?: string;
  products: Product[];
  schema?: boolean;
  startRank?: number;
  id?: string;
};
---

<section class="section" id={id}>
  <div class="page-container">
    <h2 class="text-2xl font-semibold">{title}</h2>
    {intro ? <p class="mt-3 text-sm text-ink/70">{intro}</p> : null}
    <div class="mt-6 grid gap-5 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      {products.map((product, index) => (
        <ProductCard product={product} rank={startRank + index} schema={schema} />
      ))}
    </div>
  </div>
</section>
