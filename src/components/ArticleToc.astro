---
const { items, title = "In this article" } = Astro.props as {
  items: Array<{ id: string; label: string }>;
  title?: string;
};
---

<nav aria-label={title} class="lg:sticky lg:top-24">
  <div class="lg:hidden">
    <details class="card p-4">
      <summary class="cursor-pointer text-sm font-semibold text-ink">{title}</summary>
      <ul class="mt-3 space-y-2 text-sm text-ink/70">
        {items.map((item) => (
          <li><a class="hover:text-accent" href={`#${item.id}`}>{item.label}</a></li>
        ))}
      </ul>
    </details>
  </div>
  <div class="hidden lg:block">
    <div class="card p-4">
      <p class="text-sm font-semibold text-ink">{title}</p>
      <ul class="mt-3 space-y-2 text-sm text-ink/70">
        {items.map((item) => (
          <li><a class="hover:text-accent" href={`#${item.id}`}>{item.label}</a></li>
        ))}
      </ul>
    </div>
  </div>
</nav>
