---
const { items, title = "In this guide" } = Astro.props as {
  items: Array<{ id: string; label: string }>;
  title?: string;
};
---

<nav aria-label={title}>
  <details class="reading-guide">
    <summary class="reading-guide__summary">
      <span class="reading-guide__label">{title}</span>
    </summary>
    <ul class="reading-guide__links">
      {items.map((item) => (
        <li>
          <a href={`#${item.id}`}>{item.label}</a>
        </li>
      ))}
    </ul>
  </details>
</nav>
