---
const { title = "Quick buying summary", bullets = [], id = "quick-summary" } = Astro.props as {
  title?: string;
  bullets: string[];
  id?: string;
};
---

<section id={id}>
  <h2 class="text-2xl font-semibold text-ink">{title}</h2>
  <ul class="mt-3 list-clean space-y-2 text-sm text-ink/70">
    {bullets.map((bullet) => (
      <li>{bullet}</li>
    ))}
  </ul>
</section>
