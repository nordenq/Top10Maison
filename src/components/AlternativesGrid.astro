---
import type { Product } from "../utils/data";
import { productUrl } from "../utils/routes";

const { alternatives, title } = Astro.props as { alternatives: Product[]; title: string };
---

<section class="section">
  <div class="page-container">
    <h2 class="text-2xl font-semibold">{title}</h2>
    <div class="mt-6 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {alternatives.map((product) => (
        <a class="card p-5" href={productUrl(product.slug)}>
          <h3 class="text-lg font-semibold">{product.name}</h3>
          <p class="mt-2 text-sm text-ink/70">{product.uniqueValue}</p>
        </a>
      ))}
    </div>
  </div>
</section>
