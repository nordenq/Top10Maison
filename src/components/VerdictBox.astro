---
const { title, verdict } = Astro.props as { title: string; verdict: string };
---

<section class="section">
  <div class="mx-auto w-full max-w-6xl">
    <div class="card border-l-4 border-l-accent p-6">
      <h2 class="text-xl font-semibold">{title}</h2>
      <p class="mt-2 text-sm text-ink/70">{verdict}</p>
    </div>
  </div>
</section>
