---
import type { Toplist } from "../utils/data";
import { subcategoryToplistUrl } from "../utils/routes";

const { toplists, title } = Astro.props as { toplists: Toplist[]; title: string };
---

<section class="section">
  <div class="page-container">
    <h2 class="text-2xl font-semibold">{title}</h2>
    <div class="mt-6 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {toplists.map((list) => (
        <a
          class="card card-hover flex h-full flex-col p-5"
          href={subcategoryToplistUrl(list.category, list.subcategory, list.count, list.keywordSlug)}
        >
          <h3 class="text-lg font-semibold">{list.title}</h3>
          <p class="mt-2 text-sm text-ink/70">{list.metaDescription}</p>
          <span class="mt-4 text-xs font-semibold uppercase tracking-[0.2em] text-ink/50">
            {list.count} picks
          </span>
        </a>
      ))}
    </div>
  </div>
</section>
