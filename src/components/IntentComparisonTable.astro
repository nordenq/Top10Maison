---
const { rows } = Astro.props as {
  rows: Array<{ label: string; audience: string; priority: string; priceBand: string }>;
};
---

<section class="section">
  <div class="mx-auto w-full max-w-6xl">
    <h2 class="text-2xl font-semibold">Buyer intent comparison</h2>
    <div class="mt-4 overflow-x-auto">
      <table class="min-w-[680px] w-full border-collapse text-sm">
        <thead>
          <tr class="text-left text-ink/70">
            <th class="border-b border-border pb-3 pr-4">Intent</th>
            <th class="border-b border-border pb-3 pr-4">Who it is for</th>
            <th class="border-b border-border pb-3 pr-4">Key priority</th>
            <th class="border-b border-border pb-3 pr-4">Price band</th>
          </tr>
        </thead>
        <tbody>
          {rows.map((row) => (
            <tr class="border-b border-border last:border-none">
              <td class="py-3 pr-4 font-semibold text-ink/80">{row.label}</td>
              <td class="py-3 pr-4 text-ink/70">{row.audience}</td>
              <td class="py-3 pr-4 text-ink/70">{row.priority}</td>
              <td class="py-3 pr-4 text-ink/70">{row.priceBand}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</section>
