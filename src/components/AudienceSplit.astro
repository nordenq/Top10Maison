---
const {
  id = "who-this-is-for",
  title = "Who this is / isn't for",
  forList = [],
  skipList = []
} = Astro.props as {
  id?: string;
  title?: string;
  forList?: string[];
  skipList?: string[];
};
---

<section id={id}>
  <h2 class="text-2xl font-semibold text-ink">{title}</h2>
  <div class="mt-4 grid gap-4 lg:grid-cols-2">
    {forList.length ? (
      <div class="rounded-xl border border-border bg-surface p-4">
        <h3 class="text-base font-semibold text-ink">Best for</h3>
        <ul class="mt-3 list-clean space-y-2 text-sm text-ink/70">
          {forList.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    ) : null}
    {skipList.length ? (
      <div class="rounded-xl border border-border bg-surface p-4">
        <h3 class="text-base font-semibold text-ink">Not ideal for</h3>
        <ul class="mt-3 list-clean space-y-2 text-sm text-ink/70">
          {skipList.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    ) : null}
  </div>
</section>
