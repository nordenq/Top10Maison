---
import { CSP_NONCE } from "../utils/csp";

export interface Props {
  image: string;
  title: string;
  brand?: string;
  rating?: number;
  priceTag?: string;
  badge?: string;
  summary?: string;
  pros?: string[];
  cons?: string[];
  ctaUrl: string;
  reviewUrl?: string;
  rank?: number;
  schema?: boolean;
  loading?: "lazy" | "eager";
  fetchpriority?: "high" | "low";
}

const {
  image,
  title,
  brand,
  rating,
  priceTag,
  badge,
  summary,
  pros = [],
  cons = [],
  ctaUrl,
  reviewUrl,
  rank,
  schema = false,
  loading = "lazy",
  fetchpriority
} = Astro.props as Props;

const productSchema =
  schema && title && image
    ? {
        "@context": "https://schema.org",
        "@type": "Product",
        name: title,
        url: ctaUrl,
        image,
        ...(brand ? { brand: { "@type": "Brand", name: brand } } : {}),
        ...(rating
          ? {
              aggregateRating: {
                "@type": "AggregateRating",
                ratingValue: rating,
                reviewCount: 1
              }
            }
          : {})
      }
    : null;
---

<article class="card card-hover grid gap-6 p-5 md:grid-cols-[40%_60%] md:p-7">
  <div class="relative flex aspect-[4/3] items-center justify-center overflow-hidden rounded-xl bg-surface-muted">
    <img
      src={image}
      alt={title}
      class="max-h-[90%] max-w-[90%] object-contain"
      loading={loading}
      fetchpriority={fetchpriority}
      decoding="async"
      width="400"
      height="300"
      onerror="this.onerror=null;this.src='/images/products/placeholder.svg';"
    />
    {badge ? (
      <span class="tag absolute left-3 top-3 bg-accent font-semibold text-white">
        {badge}
      </span>
    ) : null}
    {typeof rank === "number" ? (
      <span class="tag absolute right-3 top-3 bg-surface/90 font-semibold text-ink">
        #{rank}
      </span>
    ) : null}
  </div>

  <div class="flex flex-1 flex-col">
    <h3 class="text-lg font-semibold leading-snug">
      {reviewUrl ? <a class="card-link" href={reviewUrl} data-drawer-link>{title}</a> : title}
    </h3>
    {brand ? <p class="mt-1 text-sm text-ink/60">By {brand}</p> : null}
    <div class="mt-3 flex flex-wrap items-center gap-3 text-sm text-ink/70">
      {priceTag ? <span class="tag bg-accent-soft text-ink">{priceTag}</span> : null}
      {rating ? (
        <span class="tag border border-border bg-surface text-ink">
          Rating: {rating} <span class="text-warning">â˜…</span>
        </span>
      ) : null}
    </div>
    {summary ? <p class="mt-4 text-sm text-ink/70">{summary}</p> : null}
    {pros.length || cons.length ? (
      <div class="mt-4 grid gap-4 text-sm text-ink/70 lg:grid-cols-2">
        {pros.length ? (
          <div>
            <p class="text-xs font-semibold uppercase tracking-wide text-ink">Pros</p>
            <ul class="mt-2 list-disc list-inside space-y-1">
              {pros.slice(0, 3).map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        ) : null}
        {cons.length ? (
          <div>
            <p class="text-xs font-semibold uppercase tracking-wide text-ink">Cons</p>
            <ul class="mt-2 list-disc list-inside space-y-1">
              {cons.slice(0, 2).map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        ) : null}
      </div>
    ) : null}
    <div class="mt-auto pt-4">
      <div class="flex flex-wrap items-center gap-3">
        <a
          href={ctaUrl}
          target="_blank"
          rel="nofollow sponsored noopener"
          class="btn text-sm"
        >
          View on Amazon
        </a>
        {reviewUrl ? <a class="btn-ghost text-sm" href={reviewUrl} data-drawer-link>Read review</a> : null}
      </div>
    </div>
  </div>
  {productSchema ? (
    <script type="application/ld+json" nonce={CSP_NONCE} set:html={JSON.stringify(productSchema)} />
  ) : null}
</article>
