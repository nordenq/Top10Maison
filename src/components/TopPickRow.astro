---
import { CSP_NONCE } from "../utils/csp";
import ProductImageStage from "./ProductImageStage.astro";

export interface Props {
  image: string;
  title: string;
  brand?: string;
  rating?: number;
  priceTag?: string;
  badge?: string;
  summary?: string;
  pros?: string[];
  cons?: string[];
  ctaUrl: string;
  reviewUrl?: string;
  rank?: number;
  schema?: boolean;
  loading?: "lazy" | "eager";
  affiliateLabel?: string;
  affiliate?: string;
}

const {
  image,
  title,
  brand,
  rating,
  priceTag,
  badge,
  summary,
  pros = [],
  cons = [],
  ctaUrl,
  reviewUrl,
  rank,
  schema = false,
  loading = "lazy",
  affiliateLabel = "View on Amazon",
  affiliate = "amazon"
} = Astro.props as Props;

const shortenTitle = (value: string, maxLength = 90, maxSegments = 3) => {
  const segments = value
    .split("|")
    .map((part) => part.trim())
    .filter(Boolean);

  const cleaned = (segments.length ? segments.slice(0, maxSegments).join(" · ") : value.trim()) || value.trim();
  return cleaned.length > maxLength ? `${cleaned.slice(0, maxLength - 3).trim()}...` : cleaned;
};

const formatPriceTag = (value?: string) => {
  if (!value) return undefined;
  const normalized = value.trim();
  if (!normalized) return undefined;
  const hasCurrency = /^[\$£€]/.test(normalized);
  const startsWithNumber = /^[0-9]/.test(normalized);
  if (hasCurrency || !startsWithNumber) return normalized;
  return `$${normalized}`;
};

const displayTitle = shortenTitle(title);
const displayPrice = formatPriceTag(priceTag);

const productSchema =
  schema && title && image
    ? {
        "@context": "https://schema.org",
        "@type": "Product",
        name: title,
        url: ctaUrl,
        image,
        ...(brand ? { brand: { "@type": "Brand", name: brand } } : {}),
        ...(rating
          ? {
              aggregateRating: {
                "@type": "AggregateRating",
                ratingValue: rating,
                reviewCount: 1
              }
            }
          : {})
      }
    : null;
---

<article class="card card-hover grid gap-6 p-5 md:grid-cols-[minmax(220px,_280px)_1fr] md:items-stretch md:p-7">
  <ProductImageStage
    src={image}
    alt={displayTitle}
    loading={loading}
    tag={badge}
    rank={rank}
  />

  <div class="flex flex-1 flex-col">
    <h3 class="text-lg font-semibold leading-snug">
      {reviewUrl ? <a class="card-link" href={reviewUrl} data-drawer-link>{displayTitle}</a> : displayTitle}
    </h3>
    {brand ? <p class="mt-1 text-sm text-ink/60">By {brand}</p> : null}
    <div class="mt-3 flex flex-wrap items-center gap-3 text-sm text-ink/70">
      {displayPrice ? <span class="tag bg-surface-muted text-ink">{displayPrice}</span> : null}
      {rating ? (
        <span class="tag border border-border bg-surface text-ink">
          Rating: {rating} <span class="text-warning">★</span>
        </span>
      ) : null}
    </div>
    {summary ? <p class="mt-4 text-sm text-ink/70">{summary}</p> : null}
    {pros.length || cons.length ? (
      <div class="mt-4 grid gap-4 text-sm text-ink/70 lg:grid-cols-2">
        {pros.length ? (
          <div>
            <p class="text-xs font-semibold uppercase tracking-wide text-ink">Pros</p>
            <ul class="mt-2 list-clean space-y-1">
              {pros.slice(0, 3).map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        ) : null}
        {cons.length ? (
          <div>
            <p class="text-xs font-semibold uppercase tracking-wide text-ink">Cons</p>
            <ul class="mt-2 list-clean space-y-1">
              {cons.slice(0, 2).map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        ) : null}
      </div>
    ) : null}
    <div class="mt-auto pt-4">
      <div class="flex flex-wrap items-center gap-3">
        <a
          href={ctaUrl}
          target="_blank"
          rel="nofollow sponsored noopener"
          class="btn text-sm"
          data-affiliate={affiliate === "amazon" ? "amazon" : undefined}
          aria-label={affiliateLabel}
        >
          {affiliateLabel}
        </a>
        {reviewUrl ? <a class="btn-ghost text-sm" href={reviewUrl} data-drawer-link>Read review</a> : null}
      </div>
    </div>
  </div>
  {productSchema ? (
    <script type="application/ld+json" nonce={CSP_NONCE} set:html={JSON.stringify(productSchema)} />
  ) : null}
</article>
