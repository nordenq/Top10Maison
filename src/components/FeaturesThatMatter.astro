---
const {
  title = "Features that actually matter",
  matters = [],
  ignore = [],
  id = "features-that-matter"
} = Astro.props as {
  title?: string;
  matters: string[];
  ignore: string[];
  id?: string;
};
---

<section id={id}>
  <h2 class="text-2xl font-semibold text-ink">{title}</h2>
  <div class="mt-4 grid gap-4 lg:grid-cols-2">
    <div class="card p-5">
      <h3 class="text-sm font-semibold text-ink">Features that matter</h3>
      <ul class="mt-3 list-clean space-y-2 text-sm text-ink/70">
        {matters.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>
    <div class="card p-5">
      <h3 class="text-sm font-semibold text-ink">Features you can ignore</h3>
      <ul class="mt-3 list-clean space-y-2 text-sm text-ink/70">
        {ignore.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>
  </div>
</section>
