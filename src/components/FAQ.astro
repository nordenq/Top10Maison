---
const { items, id = "faq", title = "FAQ", intro } = Astro.props as {
  items: Array<{ question: string; answer: string }>;
  id?: string;
  title?: string;
  intro?: string;
};
---

<section id={id}>
  <h2 class="text-2xl font-semibold text-ink">{title}</h2>
  {intro ? <p class="mt-2 text-sm text-ink/70">{intro}</p> : null}
  <div class="mt-4 space-y-3">
    {items.map((item) => (
      <details class="card card-hover p-4">
        <summary class="cursor-pointer text-sm font-semibold text-ink">{item.question}</summary>
        <p class="mt-3 text-sm text-ink/70">{item.answer}</p>
      </details>
    ))}
  </div>
</section>
