---
const { items, id = "faq" } = Astro.props as {
  items: Array<{ question: string; answer: string }>;
  id?: string;
};
---

<section id={id}>
  <h2 class="text-2xl font-semibold text-ink">FAQ</h2>
  <div class="mt-4 space-y-3">
    {items.map((item) => (
      <details class="card p-4">
        <summary class="cursor-pointer text-sm font-semibold text-ink">{item.question}</summary>
        <p class="mt-3 text-sm text-ink/70">{item.answer}</p>
      </details>
    ))}
  </div>
</section>
