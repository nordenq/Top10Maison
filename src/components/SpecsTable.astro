---
const { specs } = Astro.props as { specs: Record<string, string> };
---

<section class="section">
  <div class="mx-auto w-full max-w-6xl">
    <h2 class="text-2xl font-semibold">Specs</h2>
    <div class="mt-4 overflow-x-auto">
      <table class="min-w-[420px] w-full border-collapse text-sm">
        <tbody>
          {Object.entries(specs).map(([label, value]) => (
            <tr class="border-b border-border last:border-none">
              <th class="py-3 pr-4 text-left font-semibold text-ink/80">{label}</th>
              <td class="py-3 pr-4 text-ink/70">{value}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</section>
