---
import type { Category } from "../utils/data";

const {
  categories,
  className = "",
  itemClassName = ""
} = Astro.props as {
  categories: Category[];
  className?: string;
  itemClassName?: string;
};
---

<nav class={`flex gap-3 overflow-x-auto ${className}`} aria-label="Categories">
  {categories.map((category) => (
    <a
      class={`whitespace-nowrap rounded-full border border-border px-4 py-1 text-ink/70 hover:border-accent hover:text-accent ${itemClassName}`}
      href={`/category/${category.slug}/`}
    >
      {category.name}
    </a>
  ))}
</nav>
