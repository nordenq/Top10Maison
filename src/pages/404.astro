---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getPageMeta } from "../utils/meta";

const { title, description, canonical } = getPageMeta(Astro.site, {
  title: "Page not found",
  description:
    "Sorry, we couldn’t find the page you were looking for. Browse our categories or return to the home page.",
  path: "/404/"
});
---

<BaseLayout title={title} description={description} canonical={canonical} robots="noindex,follow">
  <section class="section section--soft">
    <div class="page-container text-center space-y-4">
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-ink/60">404</p>
      <h1 class="text-3xl font-semibold md:text-4xl">Page not found</h1>
      <p class="mx-auto max-w-2xl text-sm text-ink/70">
        We’re sorry, but the page you requested does not exist. Head back home or jump into our categories to keep browsing.
      </p>
      <div class="mt-6 flex flex-wrap justify-center gap-3">
        <a class="btn" href="/">Back to Home</a>
        <a class="btn-ghost" href="/categories/">Browse categories</a>
      </div>
    </div>
  </section>
</BaseLayout>
