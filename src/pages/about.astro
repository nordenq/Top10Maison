---
import BaseLayout from "../layouts/BaseLayout.astro";
import { buildCanonical, buildTitle, requireSite } from "../utils/seo";

const site = requireSite(Astro.site);
const title = buildTitle("About", "Top10Maison");
const description = "Curated home buying guides built from AI-assisted research and human review.";
const canonical = buildCanonical(site, "/about/");
---

<BaseLayout title={title} description={description} canonical={canonical}>
  <section class="section">
    <div class="mx-auto w-full max-w-6xl space-y-6">
      <div>
        <h1 class="text-3xl font-semibold">About Top10Maison</h1>
        <p class="mt-3 text-sm text-ink/70">
          Top10Maison publishes curated buying guides for home categories. We combine AI-assisted research with
          human review to keep lists clear, current, and practical for real households.
        </p>
      </div>

      <div class="card p-6">
        <h2 class="text-xl font-semibold">How rankings are chosen</h2>
        <p class="mt-2 text-sm text-ink/70">
          Rankings follow a consistent rubric based on specs, review volume, customer feedback trends, availability,
          and value. We do not perform hands-on testing; we synthesize trusted sources and public data to keep
          comparisons fair and repeatable.
        </p>
      </div>

      <div class="card p-6">
        <h2 class="text-xl font-semibold">Affiliate disclosure</h2>
        <p class="mt-2 text-sm text-ink/70">
          Some links may be affiliate links, which can result in a commission. This does not affect editorial
          judgment, scoring, or placement.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
