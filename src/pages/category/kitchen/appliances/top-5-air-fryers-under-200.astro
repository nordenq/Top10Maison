---
import Layout from "../../../../layouts/BaseLayout.astro";
import { buildCanonical, requireSite } from "../../../../utils/seo";
import { subcategoryToplistUrl } from "../../../../utils/routes";

const site = requireSite(Astro.site);
const redirectUrl = buildCanonical(site, subcategoryToplistUrl("kitchen", "appliances", 10, "air-fryers-2026"));
const description = `This guide now lives at ${redirectUrl}. You are being redirected.`;
---

<Layout
  title="Best Air Fryers 2026 | Top10Maison"
  description={description}
  canonical={redirectUrl}
  metaRefresh={`0; url=${redirectUrl}`}
>
  <section class="section">
    <div class="mx-auto w-full max-w-3xl text-center">
      <h1 class="text-2xl font-semibold">Best Air Fryers 2026</h1>
      <p class="mt-3 text-sm text-ink/70">
        This guide has moved to our main Best Air Fryers 2026 list for easier browsing.
      </p>
      <a class="btn mt-6" href={redirectUrl}>Continue to the guide</a>
      <p class="mt-3 text-xs text-ink/60">
        Old path: /category/kitchen/appliances/top-5-air-fryers-under-200
      </p>
    </div>
  </section>
</Layout>
