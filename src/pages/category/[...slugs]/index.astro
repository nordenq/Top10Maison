---
import Layout from "../../../layouts/BaseLayout.astro";
import Breadcrumbs from "../../../components/Breadcrumbs.astro";
import { Image } from "astro:assets";
import CategoryCard from "../../../components/CategoryCard.astro";
import ProductGridSection from "../../../components/ProductGridSection.astro";
import ProductDrawer from "../../../components/ProductDrawer.astro";
import ArticleToc from "../../../components/ArticleToc.astro";
import QuickSummary from "../../../components/QuickSummary.astro";
import BuyingGuide from "../../../components/BuyingGuide.astro";
import FeaturesThatMatter from "../../../components/FeaturesThatMatter.astro";
import FAQ from "../../../components/FAQ.astro";
import AudienceSplit from "../../../components/AudienceSplit.astro";
import { getBestToplistForChild, getCategoryData } from "../../../utils/data";
import { getDataIndex } from "../../../utils/dataIndex";
import { buildCanonical, buildPageTitle, requireSite } from "../../../utils/seo";
import { buildArticleSchema, buildBreadcrumbSchema, buildFaqSchema, buildItemListSchema } from "../../../utils/schema";
import { categoryUrl, subcategoryUrl, childSubcategoryUrl, productUrl } from "../../../utils/routes";
import { getToplistDisplay } from "../../../utils/toplistDisplay";

const dataIndex = getDataIndex();
const { toplists, categoryMap, subcategoryMap, childSubcategoryMap } = dataIndex;

export function getStaticPaths() {
  const { categories } = getDataIndex();
  const paths = [];
  for (const category of categories) {
    paths.push({ params: { slugs: category.slug } });
    for (const subcategory of category.subcategories) {
      paths.push({ params: { slugs: `${category.slug}/${subcategory.slug}` } });
      for (const child of subcategory.subcategories) {
        paths.push({ params: { slugs: `${category.slug}/${subcategory.slug}/${child.slug}` } });
      }
    }
  }
  return paths;
}

const { slugs } = Astro.params;
const categorySlug = Array.isArray(slugs) ? slugs.join("/") : slugs;
const data = getCategoryData(slugs);

const site = requireSite(Astro.site);
const basePath = `/category/${categorySlug}/`;
const canonical = buildCanonical(site, basePath);

const breadcrumbItems = [
  { name: "Home", path: "/" },
  { name: "Categories", path: "/categories/" },
  { name: data.category.name, path: categoryUrl(data.category.slug) }
];

if (data.subcategory) {
  breadcrumbItems.push({
    name: data.subcategory.name,
    path: subcategoryUrl(data.category.slug, data.subcategory.slug)
  });
}

if (data.childsubcategory) {
  breadcrumbItems.push({
    name: data.childsubcategory.name,
    path: childSubcategoryUrl(data.category.slug, data.subcategory.slug, data.childsubcategory.slug)
  });
}

const bestToplist = data.childsubcategory
  ? getBestToplistForChild(data.category.slug, data.subcategory.slug, data.childsubcategory.slug)
  : null;
const schema = [buildBreadcrumbSchema(site, breadcrumbItems)];
const breadcrumbLinks = breadcrumbItems.map((item) => ({ name: item.name, href: item.path }));

const year = "2026";
const productName = data.childsubcategory?.name ?? data.subcategory?.name ?? data.category.name;
const bestToplistTitle = bestToplist?.metaTitle ?? bestToplist?.title;
const bestToplistDescription = bestToplist?.metaDescription;
const baseTitle = data.childsubcategory?.name ?? data.subcategory?.name ?? data.category.name;
const title = buildPageTitle({ bestToplistTitle, baseTitle, year });
const metaTitle = buildPageTitle({
  bestToplistTitle,
  baseTitle,
  year,
  useQualifier: Boolean(bestToplist),
  maxLength: 60
});
const baseDescription =
  (data.childsubcategory && bestToplistDescription
    ? bestToplistDescription
    : data.childsubcategory?.description ?? data.subcategory?.description ?? data.category.description) ||
  `${baseTitle} rankings`;
const pageDescription = `${baseDescription} Updated for ${year}.`;
const categoryFrameworkIntro =
  "Each category uses the same data-based evaluation framework to compare products fairly and consistently.";
const rankingIntro =
  "This ranking is built using data-based review technology that analyzes publicly available product information, review trends, and availability. Each product is compared using the same evaluation criteria.";
const rankingSummaryNote =
  "Product summaries are based on public information and reviewed for clarity before publication.";
const introParagraph = bestToplist && data.childsubcategory
  ? rankingIntro
  : `${categoryFrameworkIntro} ${pageDescription}`;
const ogImage =
  data.childsubcategory?.image ??
  data.subcategory?.image ??
  data.category.image ??
  "/logo.svg";
const showSubcategories = !data.subcategory;
const showChildSubcategories = Boolean(data.subcategory && !data.childsubcategory);
const bestToplistProducts = bestToplist
  ? bestToplist.products
      .map((productSlug) => dataIndex.productMap.get(productSlug))
      .filter((item): item is NonNullable<typeof item> => Boolean(item))
  : [];
const bestToplistProductsWithBadges = bestToplistProducts.map((product, index) => ({
  ...product,
  badge: bestToplist?.productBadges?.[product.slug] ?? (index === 0 ? "Best Overall" : undefined)
}));
const absoluteUrl = new URL(basePath, site).toString();
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: breadcrumbItems.map((item, index) => ({
    "@type": "ListItem",
    position: index + 1,
    name: item.name,
    item: new URL(item.path, site).toString()
  }))
};
const collectionSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  name: title,
  description: pageDescription,
  url: absoluteUrl,
  breadcrumb: breadcrumbSchema
};

const guide = data.childsubcategory?.guide ?? null;
const requiredFaqQuestion = "How are these rankings created?";
const requiredFaqAnswer =
  "Rankings are created using data-based review technology that analyzes publicly available product information, review trends, and availability. Each list follows the same evaluation criteria to ensure fair comparisons.";
const rawFaqItems =
  data.childsubcategory?.faq?.length ? data.childsubcategory.faq : bestToplist?.faq ?? [];
const faqItems = rawFaqItems.some(
  (item) => (item.question ?? "").trim().toLowerCase() === requiredFaqQuestion.toLowerCase()
)
  ? rawFaqItems
  : [{ question: requiredFaqQuestion, answer: requiredFaqAnswer }, ...rawFaqItems];
const relatedToplists = bestToplist
  ? toplists.filter((list) => list.category === bestToplist.category && list.slug !== bestToplist.slug)
  : [];
const categoryToplists = toplists.filter((list) => list.category === data.category.slug);
const subcategoryToplists = data.subcategory
  ? categoryToplists.filter((list) => list.subcategory === data.subcategory?.slug)
  : [];
const relatedListLinks = [];
if (bestToplist) {
  const seenSlugs = new Set([bestToplist.slug]);
  for (const list of [...relatedToplists, ...subcategoryToplists, ...categoryToplists]) {
    if (!list || seenSlugs.has(list.slug)) continue;
    relatedListLinks.push(list);
    seenSlugs.add(list.slug);
    if (relatedListLinks.length >= 3) break;
  }
}
const formatCriteriaList = (items: string[]) => {
  if (items.length === 1) return items[0];
  if (items.length === 2) return `${items[0]} and ${items[1]}`;
  return `${items.slice(0, -1).join(", ")}, and ${items[items.length - 1]}`;
};
const topPicksIntro = bestToplist?.quickCompareCriteria?.length
  ? `Ranked picks compared across ${formatCriteriaList(
      bestToplist.quickCompareCriteria.map((item) => item.toLowerCase())
    )}.`
  : bestToplist?.metaDescription;
const whoForItems = bestToplist?.whoShouldBuy ?? [];
const whoSkipItems = guide?.whoShouldSkip ?? [];
const hasAudienceSplit = whoForItems.length || whoSkipItems.length;
const showBuyingGuide = Boolean(guide?.buyerProfiles?.length || guide?.howToChoose?.length);
const showFeatures = Boolean(
  guide?.featuresThatMatter?.matters?.length && guide?.featuresThatMatter?.ignore?.length
);
const showCommonMistakes = Boolean(guide?.commonMistakes?.length);
const showHowWePicked = Boolean(bestToplist?.howWePicked?.length);
const showFaq = Boolean(bestToplist && faqItems.length);
const guideSectionOrder = [
  { key: "buyingGuide", show: showBuyingGuide },
  { key: "features", show: showFeatures },
  { key: "commonMistakes", show: showCommonMistakes },
  { key: "audience", show: hasAudienceSplit },
  { key: "howWePicked", show: showHowWePicked },
  { key: "faq", show: showFaq }
];
const separatorBefore: Record<string, boolean> = {};
let hasPrevGuide = false;
for (const section of guideSectionOrder) {
  if (section.show) {
    separatorBefore[section.key] = hasPrevGuide;
    hasPrevGuide = true;
  }
}
const separatorAfter: Record<string, boolean> = {};
let hasNextGuide = false;
for (const section of [...guideSectionOrder].reverse()) {
  if (section.show) {
    separatorAfter[section.key] = hasNextGuide;
    hasNextGuide = true;
  }
}
let lastGuideWasSoft = false;
const guideSectionClass = (tone: "page" | "soft") => {
  const wantsSoft = tone === "soft";
  const useSoft = wantsSoft && !lastGuideWasSoft;
  lastGuideWasSoft = useSoft;
  return `section${useSoft ? " section--soft" : ""}`;
};
let highlightUsed = false;
const highlightSectionClass = () => {
  if (highlightUsed) return "section";
  highlightUsed = true;
  return "section section--soft";
};
const tocItems = bestToplist
  ? [
      { id: "top-picks", label: "Top picks" },
      ...(guide?.quickSummary?.length ? [{ id: "quick-summary", label: "Quick buying summary" }] : []),
      ...(guide?.buyerProfiles?.length || guide?.howToChoose?.length
        ? [{ id: "how-to-choose", label: `How to choose the right ${productName}` }]
        : []),
      ...(guide?.featuresThatMatter?.matters?.length && guide?.featuresThatMatter?.ignore?.length
        ? [{ id: "features-that-matter", label: "Features that matter" }]
        : []),
      ...(guide?.commonMistakes?.length ? [{ id: "common-mistakes", label: "Common mistakes" }] : []),
      ...(hasAudienceSplit ? [{ id: "who-this-is-for", label: "Who this is for" }] : []),
      ...(bestToplist?.howWePicked?.length ? [{ id: "how-we-picked", label: "How we picked" }] : []),
      ...(faqItems.length ? [{ id: "faq", label: "FAQ" }] : [])
    ]
  : [];
const faqSchema = showFaq ? buildFaqSchema(faqItems) : null;

if (bestToplistProducts.length) {
  schema.push(
    buildItemListSchema(
      bestToplistProductsWithBadges.map((product) => ({
        name: product.name,
        url: new URL(productUrl(product.slug), site).toString()
      })),
      { ordered: true, itemType: "Product" }
    )
  );
}

if (bestToplist) {
  schema.push(buildArticleSchema(site, bestToplist, canonical));
}

if (faqSchema) {
  schema.push(faqSchema);
}
---

<Layout
  title={metaTitle}
  description={pageDescription}
  canonical={canonical}
  schema={[...schema, collectionSchema]}
  ogImage={ogImage}
>
  <section class="section section--soft">
    <div class="page-container">
      <Breadcrumbs items={breadcrumbLinks} />
      <h1 class="mt-4 text-3xl font-semibold">
        {data.childsubcategory && bestToplist?.h1 ? bestToplist.h1 : title}
      </h1>
      <p class="mt-3 text-lg text-ink/70">{introParagraph}</p>
      {bestToplist && data.childsubcategory ? (
        <p class="mt-3 text-sm text-ink/70">{rankingSummaryNote}</p>
      ) : null}
    </div>
  </section>

  {showSubcategories ? (
    <section class="section">
      <div class="page-container">
        <h2 class="text-2xl font-semibold">Subcategories</h2>
        <div class="mt-6 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {data.category.subcategories.map((subcategory) => (
            <CategoryCard category={data.category} subcategory={subcategory} />
          ))}
        </div>
      </div>
    </section>
  ) : null}

  {showChildSubcategories ? (
    <section class="section" id="subcategory-rankings">
      <div class="page-container">
        <h2 class="text-2xl font-semibold">Rankings in {data.subcategory.name}</h2>
        <div class="mt-6 grid gap-6 md:grid-cols-2">
          {subcategoryToplists.map((list, index) => {
            const childKey = `${list.category}:${list.subcategory}:${list.childsubcategory}`;
            const child = childSubcategoryMap.get(childKey);
            const category = categoryMap.get(list.category);
            const subcategory = subcategoryMap.get(`${list.category}:${list.subcategory}`);
            const display = getToplistDisplay(list, dataIndex);
            const image =
              list.image ??
              child?.image ??
              subcategory?.image ??
              category?.image ??
              "/logo.svg";
          const isLcp = index === 0;
            return (
              <a
                class="toplist-card card card-hover grid gap-4 overflow-hidden md:grid-cols-[200px_1fr]"
                href={childSubcategoryUrl(list.category, list.subcategory, list.childsubcategory)}
              >
                <div class="toplist-card__image">
                  <Image
                    class="h-full w-full object-cover"
                    src={image}
                    alt={display.schemaHeadline}
                    loading={isLcp ? "eager" : "lazy"}
                    widths={[240, 360, 480, 640]}
                    sizes="(max-width: 768px) 100vw, 200px"
                    aspectRatio={4 / 3}
                    decoding="async"
                    width={400}
                    height={300}
                  />
                </div>
                <div class="p-5">
                  <p class="text-xs font-semibold uppercase tracking-[0.25em] text-ink/70">
                    {child?.name ?? subcategory?.name ?? category?.name ?? "Top list"}
                  </p>
                  <h3 class="mt-2 text-lg font-semibold">{display.schemaHeadline}</h3>
                  <p class="mt-2 text-sm text-ink/70">{list.metaDescription}</p>
                  <span class="mt-4 inline-flex text-sm font-semibold text-ink/70 transition-colors hover:text-accent">
                    View ranking →
                  </span>
                </div>
              </a>
            );
          })}
        </div>
      </div>
    </section>
  ) : null}

  {bestToplist ? (
    <>
      <section class={guideSectionClass("page")} id="toplist-article">
        <div class="page-container">
          <div class="space-y-6">
            {tocItems.length ? <ArticleToc items={tocItems} /> : null}
            <ProductGridSection
              title={`Top Picks: Best ${data.childsubcategory.name}`}
              intro={topPicksIntro}
              products={bestToplistProductsWithBadges}
              schema
              id="top-picks"
              embedded
            />
          </div>
        </div>
      </section>

      {guide?.quickSummary?.length ? (
        <section class={highlightSectionClass()}>
          <div class="page-container">
            <QuickSummary bullets={guide.quickSummary} />
          </div>
        </section>
      ) : null}

      {showBuyingGuide ? (
        <>
          {separatorBefore.buyingGuide ? (
            <section class="section section--divider" aria-hidden="true">
              <div class="page-container">
                <div class="guide-sep">· · ·</div>
              </div>
            </section>
          ) : null}
          <section
            class={`${guideSectionClass("page")} ${separatorBefore.buyingGuide ? "pt-0 md:pt-0" : ""} ${
              separatorAfter.buyingGuide ? "pb-0 md:pb-0" : ""
            }`}
          >
          <div class="page-container">
            <BuyingGuide
              title={`How to choose the right ${productName}`}
              profiles={guide?.buyerProfiles ?? []}
              sections={guide?.howToChoose ?? []}
              id="how-to-choose"
            />
          </div>
          </section>
        </>
      ) : null}

      {showFeatures ? (
        <>
          {separatorBefore.features ? (
            <section class="section section--divider" aria-hidden="true">
              <div class="page-container">
                <div class="guide-sep">· · ·</div>
              </div>
            </section>
          ) : null}
          <section
            class={`${guideSectionClass("page")} ${separatorBefore.features ? "pt-0 md:pt-0" : ""} ${
              separatorAfter.features ? "pb-0 md:pb-0" : ""
            }`}
          >
          <div class="page-container">
            <FeaturesThatMatter
              matters={guide.featuresThatMatter.matters}
              ignore={guide.featuresThatMatter.ignore}
            />
          </div>
          </section>
        </>
      ) : null}

      {showCommonMistakes ? (
        <>
          {separatorBefore.commonMistakes ? (
            <section class="section section--divider" aria-hidden="true">
              <div class="page-container">
                <div class="guide-sep">· · ·</div>
              </div>
            </section>
          ) : null}
          <section
            class={`${guideSectionClass("page")} ${separatorBefore.commonMistakes ? "pt-0 md:pt-0" : ""} ${
              separatorAfter.commonMistakes ? "pb-0 md:pb-0" : ""
            }`}
          >
          <div class="page-container">
            <section id="common-mistakes">
              <h2 class="text-2xl font-semibold text-ink">Common mistakes to avoid</h2>
              <ul class="mt-4 list-clean space-y-2 text-sm text-ink/70">
                {guide.commonMistakes.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </section>
          </div>
          </section>
        </>
      ) : null}

      {hasAudienceSplit ? (
        <>
          {separatorBefore.audience ? (
            <section class="section section--divider" aria-hidden="true">
              <div class="page-container">
                <div class="guide-sep">· · ·</div>
              </div>
            </section>
          ) : null}
          <section
            class={`${guideSectionClass("page")} ${separatorBefore.audience ? "pt-0 md:pt-0" : ""} ${
              separatorAfter.audience ? "pb-0 md:pb-0" : ""
            }`}
          >
          <div class="page-container">
            <AudienceSplit forList={whoForItems} skipList={whoSkipItems} />
          </div>
          </section>
        </>
      ) : null}

      {showHowWePicked ? (
        <>
          {separatorBefore.howWePicked ? (
            <section class="section section--divider" aria-hidden="true">
              <div class="page-container">
                <div class="guide-sep">· · ·</div>
              </div>
            </section>
          ) : null}
          <section
            class={`${guideSectionClass("page")} ${separatorBefore.howWePicked ? "pt-0 md:pt-0" : ""} ${
              separatorAfter.howWePicked ? "pb-0 md:pb-0" : ""
            }`}
          >
          <div class="page-container">
            <section id="how-we-picked">
              <h2 class="text-2xl font-semibold text-ink">How we picked</h2>
              <p class="mt-2 text-sm text-ink/60">
                We analyze review data, specs, capacity, and availability, then apply editorial checks to keep
                comparisons consistent.
              </p>
              <ul class="mt-4 list-clean space-y-2 text-sm text-ink/70">
                {bestToplist.howWePicked.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </section>
          </div>
          </section>
        </>
      ) : null}

      {faqItems.length ? (
        <>
          {separatorBefore.faq ? (
            <section class="section section--divider" aria-hidden="true">
              <div class="page-container">
                <div class="guide-sep">· · ·</div>
              </div>
            </section>
          ) : null}
          <section
            class={`${guideSectionClass("page")} ${separatorBefore.faq ? "pt-0 md:pt-0" : ""} ${
              separatorAfter.faq ? "pb-0 md:pb-0" : ""
            }`}
          >
          <div class="page-container">
            <FAQ items={faqItems} />
          </div>
          </section>
        </>
      ) : null}
    </>
  ) : null}

  {relatedToplists.length ? (
    <section class={highlightSectionClass()} id="related-top-lists">
      <div class="page-container">
        <h2 class="text-2xl font-semibold">Related top lists</h2>
        <div class="mt-4 grid gap-4 md:grid-cols-2">
          {relatedToplists.map((list) => (
            <a
              class="card card-hover p-4"
              href={childSubcategoryUrl(list.category, list.subcategory, list.childsubcategory)}
            >
              <p class="text-xs font-semibold uppercase tracking-[0.2em] text-ink/70">Top list</p>
              <p class="mt-2 text-base font-semibold text-ink">{list.title}</p>
              <p class="mt-2 text-sm text-ink/70">{list.metaDescription}</p>
            </a>
          ))}
        </div>
      </div>
    </section>
  ) : null}

  {relatedListLinks.length ? (
    <section class="section" id="related-lists">
      <div class="page-container">
        <p class="text-sm font-semibold text-ink">Related lists</p>
        <ul class="mt-3 space-y-2 text-sm text-ink/80">
          {relatedListLinks.slice(0, 3).map((list) => (
            <li>
              <a class="hover:text-accent" href={childSubcategoryUrl(list.category, list.subcategory, list.childsubcategory)}>
                {list.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </section>
  ) : null}

  {bestToplist ? <ProductDrawer /> : null}

</Layout>
