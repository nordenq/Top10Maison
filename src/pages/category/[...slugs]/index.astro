---
import Layout from "../../../layouts/BaseLayout.astro";
import Breadcrumbs from "../../../components/Breadcrumbs.astro";
import CategoryCard from "../../../components/CategoryCard.astro";
import FAQAccordion from "../../../components/FAQAccordion.astro";
import ProductGridSection from "../../../components/ProductGridSection.astro";
import { getBestToplistForChild, getCategoryData } from "../../../utils/data";
import { getDataIndex } from "../../../utils/dataIndex";
import { buildCanonical, requireSite } from "../../../utils/seo";
import { buildBreadcrumbSchema, buildFaqSchema, buildItemListSchema } from "../../../utils/schema";
import { categoryUrl, subcategoryUrl, childSubcategoryUrl, productUrl } from "../../../utils/routes";

const dataIndex = getDataIndex();

export function getStaticPaths() {
  const { categories } = getDataIndex();
  const paths = [];
  for (const category of categories) {
    paths.push({ params: { slugs: category.slug } });
    for (const subcategory of category.subcategories) {
      paths.push({ params: { slugs: `${category.slug}/${subcategory.slug}` } });
      for (const child of subcategory.subcategories) {
        paths.push({ params: { slugs: `${category.slug}/${subcategory.slug}/${child.slug}` } });
      }
    }
  }
  return paths;
}

const { slugs } = Astro.params;
const categorySlug = Array.isArray(slugs) ? slugs.join("/") : slugs;
const data = getCategoryData(slugs);

const site = requireSite(Astro.site);
const basePath = `/category/${categorySlug}/`;
const canonical = buildCanonical(site, basePath);

const breadcrumbItems = [
  { name: "Home", path: "/" },
  { name: "Categories", path: "/categories/" },
  { name: data.category.name, path: categoryUrl(data.category.slug) }
];

if (data.subcategory) {
  breadcrumbItems.push({
    name: data.subcategory.name,
    path: subcategoryUrl(data.category.slug, data.subcategory.slug)
  });
}

if (data.childsubcategory) {
  breadcrumbItems.push({
    name: data.childsubcategory.name,
    path: childSubcategoryUrl(data.category.slug, data.subcategory.slug, data.childsubcategory.slug)
  });
}

const bestToplist = data.childsubcategory
  ? getBestToplistForChild(data.category.slug, data.subcategory.slug, data.childsubcategory.slug)
  : null;
const schema = [buildBreadcrumbSchema(site, breadcrumbItems)];
const breadcrumbLinks = breadcrumbItems.map((item) => ({ name: item.name, href: item.path }));

const bestToplistTitle = bestToplist?.metaTitle ?? bestToplist?.title;
const bestToplistDescription = bestToplist?.metaDescription;
const bestToplistIntro = data.childsubcategory?.intentCopy ?? bestToplistDescription;
const title = data.childsubcategory && bestToplistTitle
  ? bestToplistTitle
  : data.childsubcategory?.name ?? data.subcategory?.name ?? data.category.name;
const description = data.childsubcategory && bestToplistDescription
  ? bestToplistDescription
  : data.childsubcategory?.description ?? data.subcategory?.description ?? data.category.description;
const ogImage =
  data.childsubcategory?.image ??
  data.subcategory?.image ??
  data.category.image ??
  "/logo.svg";
const showSubcategories = !data.subcategory;
const showChildSubcategories = Boolean(data.subcategory && !data.childsubcategory);
const bestToplistProducts = bestToplist
  ? bestToplist.products
      .map((productSlug) => dataIndex.productMap.get(productSlug))
      .filter((item): item is NonNullable<typeof item> => Boolean(item))
  : [];
const bestToplistProductsWithBadges = bestToplistProducts.map((product, index) => ({
  ...product,
  badge: bestToplist?.productBadges?.[product.slug] ?? (index === 0 ? "Best Overall" : undefined)
}));
const absoluteUrl = new URL(basePath, site).toString();
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: breadcrumbItems.map((item, index) => ({
    "@type": "ListItem",
    position: index + 1,
    name: item.name,
    item: new URL(item.path, site).toString()
  }))
};
const collectionSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  name: title,
  description,
  url: absoluteUrl,
  breadcrumb: breadcrumbSchema
};

const microGuide = data.childsubcategory?.microGuide ?? null;
const guideHighlights = data.childsubcategory?.guideHighlights ?? null;
const hasGuideHighlights = Boolean(guideHighlights?.length);
const microGuideCards = microGuide
  ? microGuide.bullets.map((line) => {
      const index = line.indexOf(":");
      if (index === -1) return { title: line.trim(), body: "" };
      return { title: line.slice(0, index).trim(), body: line.slice(index + 1).trim() };
    })
  : [];

let stripeIndex = 0;
const takeSurface = () => stripeIndex++ % 2 === 0;
const sectionClass = (extra = "") => `section${takeSurface() ? " bg-surface" : ""}${extra ? ` ${extra}` : ""}`;

if (bestToplistProducts.length) {
  schema.push(
    buildItemListSchema(
      bestToplistProducts.map((product) => ({
        name: product.name,
        url: new URL(productUrl(product.slug), site).toString()
      }))
    )
  );
}

if (bestToplist?.faq?.length) {
  schema.push(buildFaqSchema(bestToplist.faq));
}
---

<Layout
  title={title}
  description={description}
  canonical={canonical}
  schema={[...schema, collectionSchema]}
  ogImage={ogImage}
>
  <section class={sectionClass()}>
    <div class="page-container">
      <Breadcrumbs items={breadcrumbLinks} />
      <h1 class="mt-4 text-3xl font-semibold">
        {data.childsubcategory && bestToplist?.h1 ? bestToplist.h1 : title}
      </h1>
      <p class="mt-3 text-lg text-ink/70">{description}</p>
    </div>
  </section>

  {showChildSubcategories ? (
    <section class={sectionClass()}>
      <div class="page-container">
        <h2 class="text-2xl font-semibold">How to choose</h2>
        <p class="mt-3 text-sm text-ink/70">
          A quick checklist before you dive into the subcategories below.
        </p>
        <div class="mt-6 grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4">
          <div class="card p-5">
            <div class="flex items-center gap-3">
              <span class="brand-icon">
                <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
                  <path
                    d="M4.5 8.5c0-2.2 1.8-4 4-4h7c2.2 0 4 1.8 4 4v7c0 2.2-1.8 4-4 4h-7c-2.2 0-4-1.8-4-4v-7z"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.8"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <path
                    d="M8 9.5h8M8 12.5h5M8 15.5h6"
                    stroke="currentColor"
                    stroke-width="1.8"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <circle class="accent-dot" cx="18.2" cy="7" r="1.3" fill="#2BBBAD" />
                </svg>
              </span>
              <h3 class="text-lg font-semibold">Fit and capacity</h3>
            </div>
            <p class="mt-2 text-sm text-ink/70">
              Match size to your kitchen space and your household. Bigger is not always better.
            </p>
          </div>
          <div class="card p-5">
            <div class="flex items-center gap-3">
              <span class="brand-icon">
                <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
                  <path
                    d="M6 7.5h12M6 12h7M6 16.5h10"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.8"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <circle
                    cx="18"
                    cy="12"
                    r="3"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.8"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <circle class="accent-dot" cx="19.5" cy="8.2" r="1.2" fill="#2BBBAD" />
                </svg>
              </span>
              <h3 class="text-lg font-semibold">Ease of use</h3>
            </div>
            <p class="mt-2 text-sm text-ink/70">
              Look for controls and cleanup that feel simple day to day.
            </p>
          </div>
          <div class="card p-5">
            <div class="flex items-center gap-3">
              <span class="brand-icon">
                <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
                  <path
                    d="M7.5 4.5h6.5L18 8v11c0 .9-.7 1.5-1.5 1.5h-9C6.7 20.5 6 19.9 6 19V6c0-.8.7-1.5 1.5-1.5z"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.8"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <path
                    d="M9 12l2 2 4-4"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.8"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <circle class="accent-dot" cx="16.8" cy="6.3" r="1.2" fill="#2BBBAD" />
                </svg>
              </span>
              <h3 class="text-lg font-semibold">Performance basics</h3>
            </div>
            <p class="mt-2 text-sm text-ink/70">
              Focus on consistent results, not just extra modes.
            </p>
          </div>
          <div class="card p-5">
            <div class="flex items-center gap-3">
              <span class="brand-icon">
                <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
                  <path
                    d="M7 9h6a3 3 0 0 1 0 6H6.8A2.8 2.8 0 0 1 4 12.2V7a2 2 0 0 1 2-2h11a2 2 0 0 1 2 2v3"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.8"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <path
                    d="M14 12h5M17 9v6"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.8"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <circle class="accent-dot" cx="19.2" cy="6.8" r="1.2" fill="#2BBBAD" />
                </svg>
              </span>
              <h3 class="text-lg font-semibold">Budget vs value</h3>
            </div>
            <p class="mt-2 text-sm text-ink/70">
              Decide what matters most, then spend where it counts.
            </p>
          </div>
        </div>
      </div>
    </section>
  ) : null}

  {showSubcategories ? (
    <section class={sectionClass()}>
      <div class="page-container">
        <h2 class="text-2xl font-semibold">Subcategories</h2>
        <div class="mt-6 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {data.category.subcategories.map((subcategory) => (
            <CategoryCard category={data.category} subcategory={subcategory} />
          ))}
        </div>
      </div>
    </section>
  ) : null}

  {showChildSubcategories ? (
    <section class={sectionClass()}>
      <div class="page-container">
        <h2 class="text-2xl font-semibold">Subcategories</h2>
        <div class="mt-6 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {data.subcategory.subcategories.map((childsubcategory) => (
            <CategoryCard
              category={data.category}
              parentSubcategory={data.subcategory}
              childsubcategory={childsubcategory}
            />
          ))}
        </div>
      </div>
    </section>
  ) : null}

  {microGuide ? (
    <section class={sectionClass()} id="micro-guide">
      <div class="page-container">
        <div class="flex flex-wrap items-end justify-between gap-4">
          <div>
            <h2 class="text-2xl font-semibold">{microGuide.title}</h2>
            <div class="mt-3 space-y-2 text-sm text-ink/70">
              {microGuide.intro.map((line) => (
                <p>{line}</p>
              ))}
            </div>
          </div>
        </div>

        <div class="mt-6 grid gap-6 md:grid-cols-3">
          {microGuideCards.map((card, index) => (
            <div class="card card-hover p-5">
              <div class="flex items-center gap-3">
                <span class="brand-icon">
                  {index % 3 === 0 ? (
                    <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
                      <path
                        d="M4 7.5C4 5.6 5.6 4 7.5 4h9C18.4 4 20 5.6 20 7.5v9c0 1.9-1.6 3.5-3.5 3.5h-9C5.6 20 4 18.4 4 16.5v-9z"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.8"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <path
                        d="M8 9.5h8M8 12.5h5M8 15.5h6"
                        stroke="currentColor"
                        stroke-width="1.8"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <circle class="accent-dot" cx="18.2" cy="6" r="1.3" fill="#2BBBAD" />
                    </svg>
                  ) : index % 3 === 1 ? (
                    <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
                      <path
                        d="M6 7.5h12M6 12h7M6 16.5h10"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.8"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <circle
                        class="accent-dot"
                        cx="18"
                        cy="12"
                        r="3"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.8"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <circle class="accent-dot" cx="19.5" cy="8.2" r="1.2" fill="#2BBBAD" />
                    </svg>
                  ) : (
                    <svg viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
                      <path
                        d="M7.5 4.5h6.5L18 8v11c0 .9-.7 1.5-1.5 1.5h-9C6.7 20.5 6 19.9 6 19V6c0-.8.7-1.5 1.5-1.5z"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.8"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <path
                        d="M9 12l2 2 4-4"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.8"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                      <circle class="accent-dot" cx="16.8" cy="6.3" r="1.2" fill="#2BBBAD" />
                    </svg>
                  )}
                </span>
                <h3 class="text-lg font-semibold text-ink">{card.title}</h3>
              </div>
              {card.body ? <p class="mt-2 text-sm text-ink/70">{card.body}</p> : null}
            </div>
          ))}
        </div>

        {microGuide.tip || microGuide.cta ? (
          <div class="mt-6 rounded-2xl border border-border bg-accent-soft p-5">
            {microGuide.tip ? <p class="text-sm font-semibold text-ink">{microGuide.tip}</p> : null}
            {microGuide.cta ? <p class="mt-2 text-sm text-ink/70">{microGuide.cta}</p> : null}
          </div>
        ) : null}
      </div>
    </section>
  ) : null}

  {bestToplist ? (
    <ProductGridSection
      title={`Top picks in ${data.childsubcategory.name}`}
      intro={bestToplistIntro}
      products={bestToplistProductsWithBadges}
      schema
      id="top-picks"
      surface={takeSurface()}
    />
  ) : null}

  {data.childsubcategory?.faq?.length || bestToplist?.faq?.length ? (
    <FAQAccordion
      items={data.childsubcategory?.faq?.length ? data.childsubcategory.faq : bestToplist.faq}
      id="faq"
      surface={takeSurface()}
    />
  ) : null}

  {data.childsubcategory?.fullGuideHtml ? (
    <section class={sectionClass()} id="full-guide">
      <div class="page-container">
        <div class="flex flex-wrap items-end justify-between gap-4">
          <div>
            <h2 class="text-2xl font-semibold">
              {data.childsubcategory.name} buying guide
            </h2>
            <p class="mt-2 text-sm text-ink/70">
              A practical breakdown of sizing, value tiers, and the features that matter most.
            </p>
          </div>
        </div>

        {hasGuideHighlights ? (
          <div class="mt-6 grid gap-6 lg:grid-cols-[minmax(0,2fr)_minmax(0,1fr)]">
            <div class="card p-6">
              <div class="article-content" set:html={data.childsubcategory.fullGuideHtml} />
            </div>
            <aside class="card p-6">
              <p class="text-sm font-semibold text-ink">Quick takeaways</p>
              <ul class="mt-3 list-disc list-inside space-y-2 text-sm text-ink/70">
                {guideHighlights.map((line) => (
                  <li>{line}</li>
                ))}
              </ul>
            </aside>
          </div>
        ) : (
          <div class="mt-6 card p-6">
            <div class="article-content" set:html={data.childsubcategory.fullGuideHtml} />
          </div>
        )}
      </div>
    </section>
  ) : null}

</Layout>
