---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getPageMeta } from "../../utils/meta";

const { title, description, canonical } = getPageMeta(Astro.site, {
  title: "Redirecting to Privacy Policy",
  description: "This page now lives at our Privacy Policy.",
  path: "/privacy-policy/"
});
---

<BaseLayout
  title={title}
  description={description}
  canonical={canonical}
  metaRefresh={`0;url=${canonical}`}
  robots="noindex"
>
  <section class="section">
    <div class="page-container space-y-3">
      <p class="text-sm text-ink/70">Redirecting you to the Privacy Policyâ€¦</p>
      <p class="text-sm text-ink/70">
        If you are not redirected automatically, visit <a class="text-accent" href={canonical}>Privacy Policy</a>.
      </p>
    </div>
  </section>
</BaseLayout>
