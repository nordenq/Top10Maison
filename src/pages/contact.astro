---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getPageMeta } from "../utils/meta";

const { title, description, canonical } = getPageMeta(Astro.site, {
  title: "Contact",
  description: "Contact Top10Maison for questions, feedback, or privacy requests.",
  path: "/contact/"
});
---

<BaseLayout title={title} description={description} canonical={canonical}>
  <section class="section">
    <div class="mx-auto w-full max-w-3xl space-y-6">
      <div>
        <h1 class="text-3xl font-semibold">Contact</h1>
        <p class="mt-3 text-sm text-ink/70">
          Have a question, correction, or feedback? Reach out using the form below â€” we welcome updates, data
          corrections, and general inquiries.
        </p>
      </div>

      <div class="card p-6">
        <form class="grid gap-4" action="#" method="post" novalidate>
          <label class="grid gap-2 text-sm font-semibold" for="contact-name">
            Name
            <input
              id="contact-name"
              class="rounded-xl border border-border px-3 py-2"
              type="text"
              name="name"
              placeholder="Your name"
              required
              aria-required="true"
              aria-describedby="contact-name-hint"
            />
          </label>
          <p id="contact-name-hint" class="text-xs text-ink/60">Required</p>

          <label class="grid gap-2 text-sm font-semibold" for="contact-email">
            Email
            <input
              id="contact-email"
              class="rounded-xl border border-border px-3 py-2"
              type="email"
              name="email"
              placeholder="you@example.com"
              required
              aria-required="true"
              aria-describedby="contact-email-hint"
            />
          </label>
          <p id="contact-email-hint" class="text-xs text-ink/60">Required. We only use your email to reply.</p>

          <label class="grid gap-2 text-sm font-semibold" for="contact-message">
            Message
            <textarea
              id="contact-message"
              class="rounded-xl border border-border px-3 py-2"
              name="message"
              rows="6"
              placeholder="How can we help?"
              required
              aria-required="true"
              aria-describedby="contact-message-hint"
            ></textarea>
          </label>
          <p id="contact-message-hint" class="text-xs text-ink/60">Required. Please include enough detail to help us respond.</p>
          <button type="submit" class="btn w-fit">Send message</button>
        </form>
        <p class="mt-4 text-sm text-ink/70">
          Prefer email? <a href="mailto:contact@top10maison.com">contact@top10maison.com</a>
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
