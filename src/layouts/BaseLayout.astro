---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {
  title,
  description,
  canonical,
  schema = [],
  ogImage
} = Astro.props as {
  title: string;
  description: string;
  canonical: string;
  schema?: Array<Record<string, unknown>>;
  ogImage?: string;
};

const resolvedOgImage = ogImage ? new URL(ogImage, canonical).toString() : null;
const siteUrl = new URL("/", canonical).toString();
const logoUrl = new URL("/logo.svg", canonical).toString();
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Top10Maison",
  url: siteUrl,
  logo: logoUrl,
  contactPoint: {
    "@type": "ContactPoint",
    email: "contact@top10maison.com",
    contactType: "Customer Support"
  }
};
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "Top10Maison",
  url: siteUrl
};
const mergedSchema = [organizationSchema, websiteSchema, ...schema];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta name="google-adsense-account" content="ca-pub-3680083929895808" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="sitemap" type="application/xml" href="/sitemap.xml" />
    <link rel="robots" href="/robots.txt" />
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3680083929895808" crossorigin="anonymous"></script>
    <script>
      window.addEventListener('DOMContentLoaded', function () {
        if (!localStorage.getItem('cookieConsent')) {
          const banner = document.createElement('div');
          banner.className = 'cookie-banner';
          banner.innerHTML = `
            <p>
              This site uses cookies to improve performance and serve personalized ads.
              <a href="/legal/">Learn more</a>.
            </p>
            <div class="cookie-banner__actions">
              <button type="button" data-consent="accept">Got it!</button>
              <button type="button" data-consent="decline" class="cookie-banner__decline">Decline</button>
            </div>
          `;
          const btn = banner.querySelector('[data-consent="accept"]');
          const declineBtn = banner.querySelector('[data-consent="decline"]');
          btn.addEventListener('click', function () {
            localStorage.setItem('cookieConsent', 'true');
            banner.remove();
          });
          declineBtn.addEventListener('click', function () {
            localStorage.setItem('cookieConsent', 'false');
            banner.remove();
          });
          document.body.appendChild(banner);
        }
      });
    </script>
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    {resolvedOgImage ? <meta property="og:image" content={resolvedOgImage} /> : null}
    <meta name="twitter:card" content={resolvedOgImage ? "summary_large_image" : "summary"} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {resolvedOgImage ? <meta name="twitter:image" content={resolvedOgImage} /> : null}
    <meta name="robots" content="index,follow" />
    {mergedSchema.map((entry) => (
      <script type="application/ld+json">{JSON.stringify(entry)}</script>
    ))}
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,500;9..144,700&family=Source+Sans+3:wght@400;500;600&display=swap");

      :root {
        color-scheme: light;
        --paper: #f7f3ee;
        --ink: #1f1e1c;
        --accent: #b75a2b;
        --accent-soft: #f6e7dc;
        --muted: #6b645c;
        --card: #fffdf9;
        --line: #e7ded4;
        --font-body: "Source Sans 3", "Helvetica Neue", Arial, sans-serif;
        --font-heading: "Fraunces", "Times New Roman", serif;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: var(--font-body);
        font-size: 1.05rem;
        line-height: 1.65;
        background-color: var(--paper);
        background-image:
          radial-gradient(circle at 12% 16%, rgba(183, 90, 43, 0.12), transparent 55%),
          radial-gradient(circle at 82% 12%, rgba(118, 130, 107, 0.12), transparent 50%),
          linear-gradient(180deg, rgba(255, 255, 255, 0.7), rgba(247, 243, 238, 0.9));
        background-attachment: fixed;
        color: var(--ink);
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: var(--font-heading);
        letter-spacing: 0.01em;
        line-height: 1.15;
      }

      h2 {
        font-size: clamp(1.6rem, 2.2vw, 2.1rem);
        margin: 0 0 0.6rem;
      }

      h3 {
        font-size: clamp(1.2rem, 1.6vw, 1.5rem);
        margin: 0 0 0.4rem;
      }

      p {
        margin: 0 0 1rem;
      }

      p,
      li,
      dd {
        max-width: 70ch;
      }

      a {
        color: var(--ink);
        text-decoration: none;
      }

      img {
        max-width: 100%;
        height: auto;
        border-radius: 16px;
      }

      main {
        max-width: 1100px;
        margin: 0 auto;
        padding: 56px 24px 96px;
      }

      .site-header,
      .site-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background: rgba(255, 253, 249, 0.9);
        backdrop-filter: blur(6px);
      }

      .site-header {
        position: sticky;
        top: 0;
        z-index: 10;
        border-bottom: 1px solid var(--line);
      }

      .site-footer {
        border-top: 1px solid var(--line);
      }

      .logo {
        font-weight: 700;
        letter-spacing: 0.04em;
      }

      .footer-links {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
      }

      .footer-links a {
        font-size: 0.9rem;
        color: var(--muted);
      }

      .footer-links a:hover {
        color: var(--ink);
      }

      .footer-meta {
        margin: 0;
        font-size: 0.85rem;
        color: var(--muted);
      }

      .nav a {
        margin-left: 1rem;
        font-size: 0.9rem;
        color: #333;
      }

      .eyebrow {
        font-size: 0.85rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--muted);
        margin-bottom: 0.8rem;
      }

      .section-head {
        display: grid;
        gap: 0.4rem;
        margin-bottom: 1.6rem;
      }

      .section-head p {
        color: var(--muted);
        margin: 0;
      }

      .button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 12px 18px;
        border-radius: 999px;
        font-weight: 600;
        border: 1px solid transparent;
        transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease, color 0.2s ease;
      }

      .button--primary {
        background: var(--accent);
        color: #fff;
        box-shadow: 0 12px 24px rgba(183, 90, 43, 0.2);
      }

      .button--primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 16px 30px rgba(183, 90, 43, 0.28);
      }

      .button--ghost {
        background: #fff;
        border-color: var(--line);
        color: var(--ink);
      }

      .button--ghost:hover {
        border-color: var(--accent);
        color: var(--accent);
      }

      .badge {
        display: inline-flex;
        align-items: center;
        padding: 6px 12px;
        border-radius: 999px;
        background: var(--accent-soft);
        color: var(--accent);
        font-size: 0.85rem;
        font-weight: 600;
      }

      .nav-button {
        display: inline-flex;
        align-items: center;
        padding: 8px 14px;
        border-radius: 999px;
        background: var(--accent-soft);
        border: 1px solid var(--line);
        font-weight: 500;
        font-size: 0.92rem;
        transition: background 0.2s ease, border-color 0.2s ease;
      }

      .nav-button:hover {
        background: #f1dccb;
        border-color: #dfc1aa;
      }

      .hero {
        display: grid;
        gap: 24px;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        margin-bottom: 32px;
      }

      .hero-text h1 {
        font-size: clamp(2.4rem, 3.6vw, 3.4rem);
        margin-bottom: 8px;
        line-height: 1.1;
      }

      .hero-subtitle {
        color: var(--muted);
        font-size: 1.05rem;
        max-width: 32rem;
      }

      .hero-cta {
        display: inline-flex;
        align-items: center;
        margin-top: 16px;
        padding: 12px 18px;
        border-radius: 999px;
        background: var(--accent);
        color: #fff;
        font-weight: 600;
      }

      .card {
        display: grid;
        gap: 16px;
        background: var(--card);
        padding: 16px;
        border-radius: 22px;
        border: 1px solid var(--line);
        box-shadow: 0 12px 26px rgba(34, 30, 26, 0.06);
      }

      .category-card {
        border-radius: 22px;
        overflow: hidden;
        padding: 0;
        background: var(--card);
        border: 1px solid var(--line);
        box-shadow: 0 10px 24px rgba(34, 30, 26, 0.08);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
      }

      .category-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
      }

      .category-card img {
        width: 100%;
        height: 190px;
        object-fit: cover;
        display: block;
      }

      .category-card .card-body {
        display: grid;
        gap: 8px;
        padding: 16px 18px 20px;
      }

      .category-card .card-title-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
      }

      .category-card .card-body h3 {
        margin: 0;
      }

      .category-card__arrow {
        font-size: 1.2rem;
        color: var(--accent);
        transition: transform 0.2s ease;
      }

      .category-card:hover .category-card__arrow {
        transform: translateX(4px);
      }

      .card-body h3 {
        margin: 0 0 8px;
      }

      .card-body p {
        font-size: 0.98rem;
        line-height: 1.6;
      }

      .grid {
        display: grid;
        gap: 24px;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      }

      .product-card {
        display: grid;
        gap: 16px;
        grid-template-columns: 160px 1fr;
        padding: 20px;
        background: var(--card);
        border-radius: 20px;
        box-shadow: 0 12px 34px rgba(35, 24, 13, 0.12);
      }

      .product-meta {
        position: relative;
      }

      .rank {
        position: absolute;
        top: 8px;
        left: 8px;
        background: var(--accent);
        color: #fff;
        padding: 4px 8px;
        border-radius: 999px;
        font-size: 0.8rem;
      }

      .product-actions {
        display: flex;
        align-items: center;
        gap: 16px;
      }

      .price {
        font-weight: 600;
        color: var(--muted);
      }

      .cta-row {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        margin: 16px 0;
      }

      .breadcrumbs ol {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        padding: 0;
        margin: 0 0 16px;
        list-style: none;
        color: var(--muted);
        font-size: 0.85rem;
      }

      .breadcrumbs li {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .table-wrap {
        overflow-x: auto;
        margin: 16px 0 32px;
        background: #fffdf8;
        border-radius: 16px;
        border: 1px solid #efe1cf;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        min-width: 560px;
      }

      th,
      td {
        text-align: left;
        padding: 12px 16px;
        border-bottom: 1px solid #efe1cf;
      }

      th {
        font-weight: 600;
        color: var(--muted);
      }

      .affiliate-button {
        padding: 10px 16px;
        background: var(--accent);
        color: #fff;
        border-radius: 999px;
        font-weight: 600;
      }

      .stack {
        display: grid;
        gap: 24px;
      }

      .pros-cons {
        display: grid;
        gap: 24px;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      }

      .toc {
        background: #fff6ea;
        padding: 16px 20px;
        border-radius: 16px;
        margin-bottom: 32px;
      }

      .verdict {
        padding: 20px;
        background: #fff8ee;
        border-radius: 16px;
        border: 1px solid #f0d8bf;
        margin: 24px 0;
      }

      .affiliate-disclosure {
        margin: 24px 0;
        padding: 16px;
        background: #fff0dc;
        border-left: 4px solid var(--accent);
        border-radius: 12px;
        max-width: 62ch;
      }

      .faq dt {
        font-weight: 600;
        margin-top: 16px;
      }

      .faq dd {
        margin: 8px 0 0;
        color: var(--muted);
        max-width: 62ch;
      }

      .ad-slot {
        max-width: 1100px;
        margin: 24px auto;
        padding: 0 24px;
      }

      .ad-slot--footer {
        margin-top: 0;
        margin-bottom: 32px;
      }

      .cookie-banner {
        position: fixed;
        inset: auto 24px 24px 24px;
        display: flex;
        flex-wrap: wrap;
        gap: 12px 16px;
        align-items: center;
        justify-content: space-between;
        background: #1f2937;
        color: #fff;
        padding: 14px 18px;
        border-radius: 16px;
        box-shadow: 0 14px 40px rgba(0, 0, 0, 0.25);
        z-index: 9999;
      }

      .cookie-banner p {
        margin: 0;
        max-width: 56ch;
      }

      .cookie-banner a {
        color: #9dd1ff;
      }

      .cookie-banner__actions {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
      }

      .cookie-banner button {
        border: none;
        border-radius: 999px;
        padding: 10px 16px;
        background: #9dd1ff;
        color: #1f2937;
        font-weight: 600;
        cursor: pointer;
      }

      .cookie-banner__decline {
        background: transparent;
        color: #f8fafc;
        border: 1px solid rgba(255, 255, 255, 0.4);
      }

      @media (max-width: 720px) {
        .cookie-banner {
          inset: auto 16px 16px 16px;
          align-items: flex-start;
          padding: 12px 14px;
        }

        .cookie-banner button {
          padding: 8px 14px;
        }
      }

      @media (max-width: 720px) {
        .site-header,
        .site-footer {
          flex-direction: column;
          gap: 8px;
          text-align: center;
        }

        .product-card {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
